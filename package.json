{
  "name": "envkit",
  "version": "0.1.2",
  "description": "One-command project setup, environment snapshots, and Docker Compose generation for local development",
  "main": "dist/cli/index.js",
  "bin": {
    "envkit": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    ".dev-env.example.yml"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').copyFileSync('src/utils/load-execa.js','dist/utils/load-execa.js')\"",
    "dev": "ts-node src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "dev-environment",
    "development",
    "setup",
    "docker",
    "snapshot",
    "local-development",
    "devops",
    "environment-manager",
    "docker-compose",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nazarli-shabnam/devkit.git"
  },
  "bugs": {
    "url": "https://github.com/nazarli-shabnam/devkit/issues"
  },
  "homepage": "https://github.com/nazarli-shabnam/devkit#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
